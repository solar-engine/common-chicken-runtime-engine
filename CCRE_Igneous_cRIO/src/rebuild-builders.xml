<project name="FRC Fake Deployment" default="upgrade">

	<!-- Specified in the builder configuration for this ANT builder. -->

	<eclipse.convertPath resourcepath="/TemplateRobot" property="template.dir" />
	<eclipse.convertPath resourcepath="/CCRE_Igneous_cRIO" property="crio.dir" />

	<target name="upgrade">
		<java classname="ccre.upgrade.Upgrade" classpath="${crio.dir}/bin">
			<arg value="${rebuilder-target}"/>
			<arg value="${template.dir}"/>
		</java>
	</target>

</project>
