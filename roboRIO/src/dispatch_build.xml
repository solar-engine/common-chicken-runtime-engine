<project name="CCRE Build Dispatch" default="dispatch">

	<!-- these are set by the launch configuration, as generated by ccre.deployment.RebuildBuilders -->
	<!-- or by robot_build.xml -->
	<fail unless="ccre-nonroot.dir" message="ccre-nonroot.dir must be set! This is a bug; please report it." />
	<fail unless="project.dir" message="project.dir must be set! This is a bug; please report it." />
	<fail unless="class.name" message="class.name must be set! This is a bug; please report it." />
	<fail unless="method.name" message="method.name must be set! This is a bug; please report it." />

	<property name="ccre-root.dir" location="${ccre-nonroot.dir}/.." />
	<property name="build.dir" value="${project.dir}/bin" />

	<target name="dispatch">
		<echo>${build.dir}</echo>
		<java classname="ccre.deployment.DispatchEntry" failonerror="true">
			<arg value="${ccre-root.dir}" />
			<arg value="${project.dir}" />
			<arg value="${class.name}" />
			<arg value="${method.name}" />
			<classpath path="${build.dir}" />
			<classpath path="${ccre-root.dir}/roboRIO/roboRIO.jar" />
		</java>
	</target>
</project>
